{
  "name": "trust-ray",
  "version": "1.0.0",
  "private": true,
  "description": "API for Trust Ethereum Wallet",
  "author": "Philipp Rieger",
  "scripts": {
    "start": "npm run watch-ts && npm run tslint",
    "build": "tsc",
    "watch-ts": "tsc-watch --onSuccess \"nodemon dist/Server.js\"",
    "test": "mocha --compilers ts:ts-node/register",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/Server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "engines": {
    "node": "6.11.3"
  },
  "dependencies": {
    "@types/async": "^2.0.40",
    "@types/bluebird": "^3.5.19",
    "@types/body-parser": "^1.16.2",
    "@types/chai": "^4.0.4",
    "@types/connect-mongo": "0.0.34",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.0.35",
    "@types/express-session": "1.15.6",
    "@types/jquery": "^3.2.17",
    "@types/mocha": "^2.2.44",
    "@types/mongodb": "^2.1.43",
    "@types/mongoose": "^4.7.24",
    "@types/mongoose-paginate": "^5.0.6",
    "@types/morgan": "^1.7.35",
    "@types/node": "^8.5.2",
    "@types/request": "2.0.9",
    "@types/winston": "^2.3.7",
    "@types/xss-filters": "0.0.27",
    "abi-decoder": "^1.0.9",
    "async": "^2.1.2",
    "axios": "^0.17.1",
    "bluebird": "^3.5.1",
    "body-parser": "^1.15.2",
    "chai": "^4.1.2",
    "coinmarketcap-api": "^2.0.0",
    "concurrently": "^3.4.0",
    "connect-mongo": "^2.0.0",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.4.3",
    "express": "^4.14.0",
    "express-flash": "^0.0.2",
    "express-session": "^1.14.2",
    "express-validator": "^4.3.0",
    "fs": "0.0.2",
    "mocha": "^4.0.1",
    "mongoose": "^4.6.6",
    "mongoose-paginate": "^5.0.3",
    "morgan": "^1.7.0",
    "node-cron": "^1.2.1",
    "node-pushnotifications": "^1.0.18",
    "request": "^2.78.0",
    "ts-node": "^4.1.0",
    "tsc-watch": "^1.0.10",
    "tslint": "^5.0.0",
    "typescript": "^2.5.3",
    "web3": "^1.0.0-beta.24",
    "winston": "^2.4.0",
    "xss-filters": "^1.2.7"
  },
  "devDependencies": {
    "nodemon": "^1.14.3"
  }
}
